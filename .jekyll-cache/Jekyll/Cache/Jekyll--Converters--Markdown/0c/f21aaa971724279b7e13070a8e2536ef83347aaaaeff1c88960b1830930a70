    <span class="kd">public</span> <span class="kd">func</span>  <span class="nf">getUrlStr</span><span class="p">(</span><span class="nv">param</span><span class="p">:[</span><span class="kt">String</span><span class="p">:</span><span class="kt">String</span><span class="p">]?</span> <span class="o">=</span> <span class="kc">nil</span><span class="p">)</span> <span class="o">-&gt;</span> <span class="kt">String</span> <span class="p">{</span>
